{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "isolatedModules": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // Declaration
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
  },
  "files": [
    "src/index.ts"
  ]
}
